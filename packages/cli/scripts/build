#!/bin/bash

# exit on any error
set -e

# use node_modules/.bin first
SCRIPT_DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
PATH=${SCRIPT_DIR}/node_modules/.bin:$PATH

# clean
rm -rf ./lib
tsc -b --clean

tsc -b

babel                               \
  -x .js,.ts                        \
  --ignore /**/*.test.ts,/**/*.d.ts \
  --out-dir ./lib                   \
  --root-mode upward                \
  ./src
