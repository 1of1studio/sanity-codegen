#!/bin/bash

# exit on any error
set -e

# use node_modules/.bin first
SCRIPT_DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_DIR=$(dirname "($(dirname "$(dirname "$SCRIPT_DIR")"))")
PATH=${SCRIPT_DIR}/node_modules/.bin:${ROOT_DIR}/node_modules/.bin:$PATH

npm run build
oclif-dev manifest
oclif-dev readme
