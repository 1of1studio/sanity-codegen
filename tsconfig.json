{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "sanity-codegen/cli/resolve-config": ["./src/cli/resolve-config"]
    }
  },
  "include": ["./src"],
  "exclude": ["**/*.test.ts"]
}
